<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<table class="table table-bordered table-hover">
  <thread>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Departamento</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th colspan="2">
      </tr>
    </thead>
    <tbody>
      <%= render @produtos %>
    </tbody>
  </table>
  <div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Produto com desconto</h4>
  </div>
  <table class="table table-bordered table-hover">
    <thread>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Departamento</th>
        <th>Preço</th>
        <th>Quantidade</th>
      </tr>
    </thead>
    <tbody>
      <%= render @produto_com_desconto %>
    </tbody>
  </table>
